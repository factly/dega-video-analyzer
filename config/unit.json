{
    "databaseConfig": {
        "uri": "mongodb://localhost:27017/",
        "databases": {
            "core": "degaUnit",
            "factcheck": "degaUnit"
        }
    },
    "middleware": {
        "compress": {
            "priority": 10,
            "enabled": true
        },
        "logger": {
            "enabled": true,
            "route": "/*",
            "priority": 20,
            "module": {
                "name": "path:middleware/logHandler",
                "arguments": [
                    {
                        "writeToDisk": true,
                        "component": "dega_video_analyzer",
                        "logDir": "./logs",
                        "writeToConsole": true,
                        "level": "debug"
                    }
                ]
            }
        },
        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },
        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },
        "errorHandler": {
            "enabled": true,
            "priority": 140,
            "module": {
                "name": "path:middleware/errorHandler",
                "arguments": []
            }
        }
    }
}
